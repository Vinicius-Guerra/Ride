{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./",  // Inclui todos os arquivos a partir da raiz do projeto
    "outDir": "./dist",  // Diretório de saída para os arquivos compilados
    "noEmit": false,  // Permite a emissão de arquivos compilados
    "allowImportingTsExtensions": true
  },
  "include": [
    "src/**/*",
    "prisma/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".env",
    ".env.test"
  ]
}
