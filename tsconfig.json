{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": ".",  // Diretório raiz
    "outDir": "./dist",  // Diretório de saída para os arquivos compilados
    "noEmit": false,  // Permite a emissão de arquivos compilados
    // "allowImportingTsExtensions": true // Removido para evitar o erro TS5096
  },
  "include": [
    "src/**/*",
    "prisma/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.env"
  ]
}
